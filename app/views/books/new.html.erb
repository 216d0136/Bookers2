<% if flash[:notice] %>
		<p><%= flash[:notice] %></p>
<% end %>
<h1>Books</h1>
<%= form_for(@book, url: '/books') do |f| %>
	<%= render 'layouts/error_messages', model: f.object %>
	<h1>New Book</h1>

	<h4>Title</h4>
	<%= f.text_field :title %>

	<h4>Opinion</h4>
	<%= f.text_area :body %>


	<%= f.submit 'Create Book' %>
<% end %>
